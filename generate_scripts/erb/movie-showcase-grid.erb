<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
		<script src="http://sample-web-server/sample-xml/js/main.js"/>
	</head>
	<body>
		<scroller id="com.sample.movie-showcase-grid">
			<header>
				<simpleHeader accessibilityLabel="Movie showcase">
					<title>Movies</title>
					<image required="true">http://sample-web-server/sample-xml/images/ZYXLogo.png</image>
				</simpleHeader>
			</header>
			<items>
				<showcase accessibilityLabel="Showcase movies" id="showcase_1">
		          <initialSelection>
		            <indexPath>
		              <index>3</index>
		            </indexPath>
		          </initialSelection>
		          <items>
		          	<% 5.times do |x| %>
		            <showcasePoster id="showcase_item_<%=x+1%>" accessibilityLabel="Showcase item <%=x+1%>" onSelect="atvutils.loadURL('http://sample-web-server/sample-xml/movie.xml');" onPlay="atvutils.loadURL('http://sample-web-server/sample-xml/sample-video/http-file-video-player.xml');">
		              <image src1080="http://sample-web-server/sample-xml/images/1080p/Showcase-<%=x+1%>.png" src720="http://sample-web-server/sample-xml/images/720p/Showcase-<%=x+1%>.png"/>
		              <defaultImage>resource://Poster.png</defaultImage>
		            </showcasePoster>
		            <% end %>
		          </items>
		        </showcase>
				<% @hashRows.each do |row| %>
				<collectionDivider alignment="left" accessibilityLabel="<%=row["TITLE"]%>">
					<title><%=row["TITLE"]%></title>
				</collectionDivider>
				<shelf id="shelf_<%=@hashRows.index(row)%>">
					<sections>
						<shelfSection>					
							<items>
								<% 50.times do |x| %>
								<moviePoster id="shelf_item_<%=x+1%>" accessibilityLabel="Shelf item <%=x+1%>" onSelect="atvutils.loadURL('http://sample-web-server/sample-xml/movie.xml');" onPlay="atvutils.loadURL('http://sample-web-server/sample-xml/sample-video/http-file-video-player.xml');">
									<title>Movie <%=x+1%></title>
									<image src720="http://sample-web-server/sample-xml/images/720p/movie1.png" src1080="http://sample-web-server/sample-xml/images/1080p/movie1.png" />
									<defaultImage>resource://Poster.png</defaultImage>
								</moviePoster>
								<% end %>
							</items>
						</shelfSection>
					</sections>
				</shelf>
				<% end %>
				<collectionDivider alignment="left" accessibilityLabel="Most Popular">
					<title>Most Popular</title>
				</collectionDivider>
				<grid id="grid_1">
					<items>
						<% 200.times do |x| %>
						<moviePoster id="grid_item_<%=x+1%>" accessibilityLabel="Grid item <%=x+1%>" onSelect="atvutils.loadURL('http://sample-web-server/sample-xml/movie.xml');" onPlay="atvutils.loadURL('http://sample-web-server/sample-xml/sample-video/http-file-video-player.xml');">
							<title>Movie <%= x+1 %></title>
							<image src720="http://sample-web-server/sample-xml/images/720p/movie1.png" src1080="http://sample-web-server/sample-xml/images/1080p/movie1.png" />
							<defaultImage>resource://Poster.png</defaultImage>
						</moviePoster>
						<% end %>
					</items>
				</grid>
			</items>
		</scroller>
	</body>
</atv>